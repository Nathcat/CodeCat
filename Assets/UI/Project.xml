<?xml version="1.0" encoding="UTF-8"?>
<interface domain="net.nathcat.codecat">
    <requires lib="gtk" version="4.0" />
    <object class="GtkBox" id="editor-box">
        <property name="layout-manager">
            <object class="GtkConstraintLayout">
                <constraints>
                    <constraint
                        target="editor"
                        target-attribute="height"
                        relation="eq"
                        source="super"
                        source-attribute="height"
                    />

                    <constraint
                        target="editor"
                        target-attribute="start"
                        relation="eq"
                        source="editor-line-numbers-separator"
                        source-attribute="end"
                    />

                    <constraint
                        target="editor"
                        target-attribute="end"
                        relation="eq"
                        source="super"
                        source-attribute="end"
                    />

                    <constraint
                        target="line-numbers"
                        target-attribute="start"
                        relation="eq"
                        source="super"
                        source-attribute="start"
                    />

                    <constraint
                        target="line-numbers"
                        target-attribute="end"
                        source="editor-line-numbers-separator"
                        source-attribute="start"
                        relation="eq"
                    />

                    <constraint
                        target="line-numbers"
                        target-attribute="height"
                        source="editor"
                        source-attribute="height"
                        relation="eq"
                    />

                    <constraint
                        target="line-numbers"
                        target-attribute="width"
                        constant="100"
                        relation="eq"
                    />

                    <constraint
                        target="editor-line-numbers-separator"
                        target-attribute="width"
                        relation="eq"
                        constant="5"
                    />

                    <constraint
                        target="editor-line-numbers-separator"
                        target-attribute="height"
                        relation="eq"
                        source="editor"
                        source-attribute="height"
                    />
                </constraints>

            </object>
        </property>

        <child>
            <object class="GtkTextView" id="editor">
                <property name="name">editor</property>
            </object>
        </child>

        <child>
            <object class="GtkSeparator" id="editor-line-numbers-separator" />
        </child>

        <child>
            <object class="GtkTextView" id="line-numbers">
                <property name="name">line-numbers</property>    
                <property name="editable">false</property>
                <property name="cursor-visible">false</property>
                <property name="left-margin">20</property>
                <property name="right-margin">50</property>
                <property name="justification">GTK_JUSTIFY_RIGHT</property>
            </object>
        </child>
    </object>
</interface>