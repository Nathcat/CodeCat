<?xml version="1.0" encoding="UTF-8"?>
<interface domain="net.nathcat.codecat">
    <requires lib="gtk" version="4.0" />
    
    <object class="GtkGrid" id="home-box">
        <property name="row-spacing">50</property>
        <property name="column-spacing">10</property>
        <property name="halign">GTK_ALIGN_CENTER</property>
        <property name="valign">GTK_ALIGN_CENTER</property>

        <child>
            <object class="GtkLabel" id="title">
                <property name="name">title</property>
                <property name="label">CodeCat</property>
                <property name="justify">GTK_JUSTIFY_CENTER</property>

                <layout>
                    <property name="column">0</property>
                    <property name="row">0</property>
                    <property name="column-span">3</property>
                </layout>
            </object>
        </child>

        <child>
            <object class="GtkButton" id="open-button">
                <property name="label">Open project</property>

                <layout>
                    <property name="column">1</property>
                    <property name="row">1</property>
                </layout>

                <signal name="clicked" handler="ccat_home_open_project" />
            </object>
        </child>

    </object>
</interface>